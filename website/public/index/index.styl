purely_plumage = #472D38
hipster_in_blue = #72AD97
khaki = #D6D9BA
beautfy_nude = #E6AF83
peach_dream_machine = #D16C5C

body
    background-color khaki
    margin 22px
    font-family 'Nunito'

.header
    text-align center
    margin-bottom 80px

.list
    .row
        width 600px
        height 50px
        line-height 50px
        margin 0 auto

        .domain
            width 200px
            float left
            text-align center

        a
            font-family 'Inconsolata'
            font-size 28px
            text-decoration none
            color purely_plumage
            transition color 0.1s, font-size 0.1s
            -webkit-transition color 0.1s, font-size 0.1s

            &:hover
                color peach_dream_machine
                font-size 32px

    .sep
        width 600px
        height 1px
        margin 30px auto
        background-color gray

.page
    width 400px
    height 40px
    margin 50px auto 0 auto
    text-align center
    line-height 40px

    .num
        float left
        height 100%
        width 33.33%
        font-size 15px

    a
        display block
        text-decoration none
        color black
        float left
        height 100%
        width 33.33%
        border-radius 5px
        font-size 20px
        background-color beautfy_nude
        transition background-color 0.2s
        -webkit-transition background-color 0.2s

        &.dull
            opacity 0.5

        &:not(.dull):hover
            background-color hipster_in_blue
