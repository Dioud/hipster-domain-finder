purely_plumage = #472D38
hipster_in_blue = #72AD97
khaki = #D6D9BA
beautfy_nude = #E6AF83
peach_dream_machine = #D16C5C

body
    background-color khaki
    margin-top 18px
    font-family 'Arial', 'Helvetica'

a
    color blue
    text-decoration none

.bold
    font-weight bold

.header
    text-align center
    margin-bottom 28px

.subtitle
    text-align center
    margin-bottom 40px
    font-size 16px

.list
    .row
        width 750px
        height 50px
        line-height 50px
        margin 0 auto

        .domain
            width 250px
            float left
            text-align center

        a
            font-family 'Inconsolata', 'Arial', 'Helvetica'
            font-size 28px
            text-decoration none
            color purely_plumage
            transition color 0.1s, font-size 0.1s
            -webkit-transition color 0.1s, font-size 0.1s

            &:hover
                color peach_dream_machine
                font-size 32px

    .sep
        width 600px
        height 1px
        margin 30px auto
        background-color gray

.page
    font-family 'Nunito', 'Arial', 'Helvetica'
    width 400px
    height 40px
    margin 50px auto 0 auto
    text-align center
    line-height 40px

    .num
        float left
        height 100%
        width 33.33%
        font-size 15px

    a
        display block
        text-decoration none
        color black
        float left
        height 100%
        width 33.33%
        border-radius 5px
        font-size 20px
        background-color beautfy_nude
        transition background-color 0.2s
        -webkit-transition background-color 0.2s

        &.dull
            opacity 0.5

        &:not(.dull):hover
            background-color hipster_in_blue

.twitter
    position relative
    display block
    width 180px
    margin 15px auto 0 auto
    opacity 0.3
    transition opacity 0.3s
    -webkit-transition opacity 0.3s

    &:hover
        opacity 1

.footer
    margin-top 10px
    font-family 'Arial', 'Helvetica'
    text-align center
    font-size 12px

    a
        text-decoration none
        color peach_dream_machine
        opacity 0.5
        transition opacity 0.3s
        -webkit-transition opacity 0.3s

        &:hover
            opacity 1

    span
        font-weight bold

.info-bg
    display none
    opacity 0
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color black
    cursor pointer

.info
    display none
    opacity 0
    position fixed
    margin auto
    top 0
    left 0
    bottom 0
    right 0
    width 460px
    height 200px
    border 3px solid black
    border-radius 5px
    background-color white
    transition opacity 0.5s
    -webkit-transition opacity 0.5s

    .title
        margin-bottom 8px
        background-color peach_dream_machine
        font-family 'Nunito', 'Arial', 'Helvetica'
        font-size 24px
        color white
        padding 2px
        text-align center

    .content
        padding 8px

    .list
        text-align center
        font-weight bold

        .reg
            margin 0 4px
            border 1px solid black
            border-radius 4px
            padding 5px
            background-color hipster_in_blue
            color white

            &:not(.true)
                opacity 0.5
                cursor default

    .tweet
        span
            cursor pointer

        .text
            width 300px
            height 30px
            font-size 18px
