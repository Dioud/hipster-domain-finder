    .list
      - var base = 'https://www.gandi.net/domain/buy/result?domain_list='
      - for (var i = 0; i < domains.length; i += 3) {
        - if(i != 0 && i % 12 == 0) {
          .sep
        - }
        .row
          a(href=base + domains[i].name target='_blank')
            .domain=domains[i].name

          - if(domains.length > i + 1) {
            a(href=base + domains[i+1].name target='_blank')
              .domain=domains[i+1].name
          - }

          - if(domains.length > i + 2) {
            a(href=base + domains[i+2].name target='_blank')
              .domain=domains[i+2].name
          - }
      - }
    .page
      - var prev = parseInt(page) - 1
      - var next = parseInt(page) + 1

      - if(page > 1) {
        a(href='/p/' + prev) prev
      - }
      - else {
        a.dull prev
      - }

      .num=page

      - if(domains.length == 60) {
        a(href='/p/' + next) next
      - }
      - else {
        a.dull no more :(
      - }
